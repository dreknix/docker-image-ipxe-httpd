#!ipxe

isset ${default-submenu-target} || set default-submenu-target back
set submenu-target ${default-submenu-target}

###################### SUBMENUE UBUNTU VERSION ######################

:start
menu iPXE menu - Ubuntu
item --gap --              UBUNTU DESKTOP
item ubuntu-desktop        Ubuntu Desktop {{ version }}
item xubuntu-desktop       XUbuntu Desktop {{ version }}
item ubuntu-desktop-min    Ubuntu Desktop {{ version }} (minimal)
item ubuntu-desktop-debug  Ubuntu Desktop {{ version }} (debug)
item --gap --
item --gap --              UBUNTU SERVER
item ubuntu-server         Ubuntu Server {{ version }} (autoinstall)
item --gap --
item back                  Back to Ubuntu menue
choose --timeout ${submenu-timeout} --default ${submenu-target} selected || goto cancel
set submenu-timeout 0
goto ${selected}


###################### SUBMENUE UBUNTU VERSION ITEMS ################

:ubuntu-desktop
goto start

:ubuntu-server
goto start
